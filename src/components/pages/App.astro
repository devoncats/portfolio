---
import Layout from '@/layouts/Layout.astro'
import Hero from '../Hero.astro';

import { getI18N } from "@/i18n";

import GithubIcon from '@/icons/github.astro';
import LinkedinIcon from '@/icons/linkedin.astro';
import TwitterIcon from '@/icons/twitter.astro';
import InstagramIcon from '@/icons/instagram.astro';

import { Image } from 'astro:assets';
import Jose from '@/resources/jose-vasquez.jpg';

import ArrowDown from '@/icons/arrow-down.astro'

const { currentLocale  } = Astro
const i18n = getI18N({ currentLocale })

---

<Layout title='devoncats | Fullstack Developer'>
	<main id="hero" class="px-36 pt-36 pb-64 h-[94vh] flex flex-col justify-around">
        <Hero />
    </main>

    <section class="relative">
        <div class="absolute right-16 -translate-y-12">
            <a href="#about" class="text-sm flex gap-2 items-center">
                { i18n.HERO.SCROLL_MESSAGE }
                <ArrowDown />
            </a>
        </div>
    </section>

    <article id="about" class='px-36 py-12 flex flex-col items-center gap-16'>
        <h1 class="font-serif text-4xl">{ i18n.ABOUT.TITLE }</h1>
        
        <section class="flex justify-between">
            <Image src={Jose} alt="Devoncats" class='w-[30%] h-[30%] rounded-ss-[12rem] rounded-3xl shadow' />
            
            <div class="w-1/2 flex flex-col gap-8">
                <p>{ i18n.ABOUT.MESSAGE_1 }</p>   
                <p>{ i18n.ABOUT.MESSAGE_2 }</p>
                    
                <div class="flex gap-4">
                    <a href="https://linkedin.com/in/jose-ignacio-vasquez" class="border px-4 py-2 rounded-lg"><LinkedinIcon /></a>
                    <a href="https://github.com/devoncats" class="border px-4 py-2 rounded-lg"><GithubIcon /></a>
                    <a href="https://x.com/Alox2809" class="border px-4 py-2 rounded-lg"><TwitterIcon /></a>
                    <a href="https://www.instagram.com/silly.jivr/" class="border px-4 py-2 rounded-lg"><InstagramIcon /></a>
                </div>
            </div>
        </section>
    </article>
</Layout>

<style>
    #hero {
    background-size: 40px 40px;
     background-image:
        linear-gradient(to right, rgba(0, 0, 0, 0.03) 1px, transparent 1px),
        linear-gradient(to bottom, rgba(0, 0, 0, 0.03) 1px, transparent 1px);
    }
</style>